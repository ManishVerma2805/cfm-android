<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C3D51"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/backgound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/buildings_image" />


        <ImageView

            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/gf_logo_sign_in" />

        <TextView
            android:id="@+id/cashflowsimplified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:letterSpacing=".3"
            android:text="CASHFLOW  SIMPLIFIED"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-thin"/>

        <RelativeLayout
            android:id="@+id/enter_your_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cashflowsimplified"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:letterSpacing=".1"
                android:text="ENTER YOUR DETAILS"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-thin"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/enter_details" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/signin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_your_detail_layout"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_white_rounded"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/email_icon"
                    android:hint="EMAIL"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#E9E9E9" />

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/password"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:padding="6dp"
                    android:password="false"
                    android:textSize="15sp"

                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_button_selector"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/new_user_signup_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:letterSpacing=".1"
                android:padding="6dp"
                android:text="NEW USER? SIGN-UP HERE"
                android:textColor="#36CCEF"
                android:fontFamily="sans-serif-thin"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/signup_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_your_detail_layout"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_white_rounded"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/company_name"
                    android:hint="COMPANY NAME"
                    android:inputType="textCapWords"
                    android:lines="1"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textSize="15sp"

                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#E9E9E9" />

                <EditText
                    android:id="@+id/newuser_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/email_icon"
                    android:hint="EMAIL"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textSize="15sp"

                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#E9E9E9" />


                <EditText
                    android:id="@+id/newuser_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/phone_icon"
                    android:hint="PHONE"
                    android:inputType="phone"
                    android:lines="1"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textSize="15sp"

                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"
                    />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#E9E9E9" />


                <EditText
                    android:id="@+id/newuser_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/password"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"

                    android:lines="1"
                    android:padding="6dp"
                    android:password="false"
                    android:textSize="15sp"

                    android:textColor="#1F1F29"
                    android:textColorHint="#1F1F29"
                    android:fontFamily="sans-serif-light"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button_selector"
                android:text="SIGN-UP"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/existing_user_login_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:letterSpacing=".1"
                android:padding="6dp"
                android:text="EXISTING USER? LOGIN HERE"
                android:textColor="#36CCEF"

                android:fontFamily="sans-serif-thin"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:letterSpacing=".2"
            android:padding="6dp"
            android:text="SAFE . SECURE . EASY"
            android:textColor="#FFFFFF"

            android:fontFamily="sans-serif-thin"/>
    </RelativeLayout>
</ScrollView>